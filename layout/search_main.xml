<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/pink"
    android:orientation="vertical" >

     <include 
	        android:id="@+id/rl_middle1_type"
	        android:layout_width="match_parent"
        	android:layout_height="@dimen/edge_90"
	        layout = "@layout/rl_title"
            /> 

    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"     
        android:layout_marginBottom="@dimen/edge_10"
        android:background="@drawable/shape_item_share"
         >
       <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/edge_74"
            android:layout_marginLeft="@dimen/edge_20" 
            android:layout_marginTop="@dimen/edge_20"
            android:layout_marginBottom="@dimen/edge_20"
            android:layout_marginRight="@dimen/edge_20"
            android:background="@drawable/boder_edit"
            android:gravity="center_vertical"
            android:hint="@string/putin_search_str"
            android:maxLength="20"
            android:focusable="true"
            android:singleLine="true"
            android:paddingLeft="@dimen/edge_20"
            android:layout_weight="1" 
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_36" />

         <Button
          android:id="@+id/search_b"
          android:layout_width="60dp"
          android:layout_height="@dimen/edge_74"
          android:layout_gravity="center_vertical"
          android:background="@drawable/shape_buttomitem"
          android:textColor="@color/white"
          android:layout_marginRight="@dimen/edge_20" 
          android:text="@string/search_str" />
	    
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" 
	    android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"     
        android:layout_marginBottom="@dimen/edge_20"
        android:background="@drawable/shape_item_share"
         >
     
      <ListView
	        android:id="@+id/search_List"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"  
	        android:layout_marginLeft="@dimen/edge_20"
            android:layout_marginRight="@dimen/edge_10"  
	        android:dividerHeight="0.8dip"  
	        android:cacheColorHint="@color/transparent"
            android:divider="@color/list_divider"
            android:scrollbars="none"           
	         >
	      </ListView>
	</LinearLayout>
</LinearLayout>