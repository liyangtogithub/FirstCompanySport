<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlistitem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal">
	        <ImageView
		           android:id="@+id/litem_head"
			       android:layout_width="56dp"
			       android:layout_height="56dp"
			       android:layout_marginTop="@dimen/edge_3"
                   android:layout_marginBottom="@dimen/edge_3"
                   android:layout_marginRight="@dimen/edge_8"
			       android:layout_gravity="center_vertical"
			       android:src="@drawable/headdefault"/>
	        <TextView
	               android:id="@+id/litem_name1"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:visibility="gone"
	            ></TextView>
	         <TextView
	               android:id="@+id/litem_name2"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_weight="1"
	               android:gravity="center_vertical"
	               android:textColor="@color/black"
	               android:textSize="@dimen/fontsize_36" 
	               android:layout_gravity="center_vertical"
	            ></TextView>
	
	             <TextView
	               android:id="@+id/litem_mils"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:gravity="center_vertical|right"
	               android:textSize="@dimen/fontsize_36" 
	               android:layout_marginLeft="5dp"
	               android:textColor="@color/black"
	               android:layout_gravity="center_vertical"
	               android:text="@string/alldistance"
	            ></TextView>
	              <TextView
	               android:id="@+id/litem_rank"
	               android:layout_width="60dp"
	               android:layout_height="wrap_content"
	               android:gravity="center_vertical|right"
	               android:textSize="@dimen/fontsize_36" 
	               android:textColor="@color/black"
	               android:layout_gravity="center_vertical"
	               android:text="@string/no_rankn_str"
	            ></TextView>
	          <ImageView
	               android:layout_width="20dp"
	               android:layout_height="wrap_content"
	               android:layout_gravity="center_vertical"
	               android:src="@drawable/item_arrow" /> 
</LinearLayout>