<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#282828"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"
        android:maxWidth="70dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/no_musicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/no_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
			android:layout_gravity="right">
            <ImageButton
                android:id="@+id/btnPrevious_player"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fg_premusic"
                />
            <ImageButton
                android:id="@+id/btnPlay_player"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fg_pausemusic"
                 />
            <ImageButton
                android:id="@+id/btnNext_player"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/fg_nextmusic"
             />
    </LinearLayout>

</LinearLayout>