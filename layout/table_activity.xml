<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/table_color"
    android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/table_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>
    
    <TextView
        android:id="@+id/y_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/edge_3"
        android:gravity="top"
        android:text="@string/type_distance"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_34" />
    
     <TextView
            android:id="@+id/x_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/xlable"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_34"
             />

</RelativeLayout>