<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical" >

    <include
        android:id="@+id/record_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edge_90"
        layout="@layout/rl_title" />

    <LinearLayout
        android:id="@+id/loop_lay1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fontsize_90"
        android:layout_marginLeft="@dimen/edge_26"
        android:layout_marginRight="@dimen/edge_26"
        android:layout_marginTop="@dimen/edge_80"
        android:background="@drawable/selector_btn_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/transparent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/edge_30"
            android:text="@string/loop_introduce"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_40" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edge_50"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:src="@drawable/record" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loop_lay3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fontsize_90"
        android:layout_marginLeft="@dimen/edge_26"
        android:layout_marginRight="@dimen/edge_26"
        android:layout_marginTop="@dimen/edge_40"
        android:background="@drawable/selector_btn_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/transparent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/edge_30"
            android:text="@string/loop_use"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_40" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edge_50"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:src="@drawable/record" />
    </LinearLayout>

</LinearLayout>