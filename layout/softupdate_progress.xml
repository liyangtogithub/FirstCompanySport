<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	        <TextView
      android:id="@+id/tv_title"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/edge_90"
      android:text="@string/app_update_title"
      android:background="@color/pink"
      android:textSize="@dimen/fontsize_36"
      android:textColor="@color/white"
      android:gravity="center"
       />
      <ProgressBar
          android:id="@+id/update_progress"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_marginTop="@dimen/edge_20"
          android:layout_width="240dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
/>

    <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edge_74"
                    android:layout_marginTop="@dimen/edge_20"
                    android:background="@drawable/selector_btn_dark"
                    android:text="@string/btn_cancel"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_36" />
                    <View 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edge_30"  
                    android:background="@color/white"  
                />

</LinearLayout>