<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/pink"
    android:orientation="vertical" >
    
    <include 
	    android:id="@+id/rl_middle1_type"
	    android:layout_width="match_parent"
        android:layout_height="@dimen/edge_90"
	    layout = "@layout/rl_title"
     /> 
 
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"     
        android:layout_marginBottom="@dimen/edge_10"
        android:background="@drawable/shape_item_share"
        android:orientation="vertical"              
        >
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"              
        >
        <TextView
               android:id="@+id/f_mynametext"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:textColor="@color/black"
               android:paddingLeft="@dimen/edge_20"
               android:textSize="@dimen/fontsize_30" 
               android:textStyle="bold"
               android:layout_gravity="center_vertical"
               android:text="@string/noname_str"
            ></TextView>
         <RelativeLayout
        
         android:layout_width="0dp"
         android:layout_weight="1" 
         android:layout_gravity="center_vertical"
         android:paddingLeft="@dimen/edge_40"
         android:layout_height="wrap_content"
        >
	     <ImageView
	         android:id="@+id/f_msgimg"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:background="@drawable/bg_button"
			android:src="@drawable/msg"
		   />
	     <TextView
	         android:id="@+id/f_msgtext"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentBottom="true"
	         android:textColor="@color/pink"
	         android:paddingLeft="@dimen/edge_36"
	         android:textSize="@dimen/fontsize_30" />
	  </RelativeLayout>



           <ImageView
            android:id="@+id/f_addfimg"
            android:layout_width="50dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:src="@drawable/add_normal" />
   </LinearLayout>
         
        <View android:layout_width="fill_parent" android:layout_height="1dip"
              android:layout_marginLeft="@dimen/edge_20"
	          android:layout_marginRight="@dimen/edge_20"
			  android:background="@color/list_divider" />
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edge_20"
	    android:layout_marginRight="@dimen/edge_20"
        android:orientation="horizontal"              
        >
	    <ImageView
	    android:id="@+id/f_myhead"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_marginTop="@dimen/edge_3"
        android:layout_marginBottom="@dimen/edge_3"
        android:layout_marginRight="@dimen/edge_40"
		android:layout_gravity="center_vertical"
		 />

        <LinearLayout 
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"  
          android:layout_weight="1" 
          android:orientation="vertical" 
        >
        <LinearLayout android:layout_width="fill_parent"
	     android:layout_height="wrap_content" 
	     android:orientation="horizontal">
	      <TextView
	               android:id="@+id/friend_name"
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_weight="1"
	               android:visibility="gone"
	       ></TextView>
           <TextView
               android:id="@+id/friend_text1"
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:gravity="center_vertical"
               android:textColor="@color/black"
               android:layout_weight="1" 
               android:textSize="@dimen/fontsize_36" 
               android:layout_marginRight="1dp"
            ></TextView> 
            <TextView
               android:id="@+id/f_mycitytext"
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:textColor="@color/black"
               android:layout_weight="1" 
               android:textSize="@dimen/fontsize_36"
               android:text="@string/city_str"
            ></TextView> 

        </LinearLayout>  
         <LinearLayout android:layout_width="fill_parent"
	     android:layout_height="wrap_content" 
	     android:orientation="horizontal">
            <TextView
               android:id="@+id/friend_text3"
               android:layout_width="0dp"
               android:layout_weight="1" 
               android:gravity="center_vertical"
               android:layout_height="fill_parent"
               android:textColor="@color/black"
               android:textSize="@dimen/fontsize_30"
               android:text="@string/themonth_str"
            ></TextView> 
           <TextView
               android:id="@+id/f_mymilestext"
               android:layout_width="0dp"
               android:layout_height="fill_parent"
               android:textColor="@color/black"
               android:layout_weight="1"
               android:textSize="@dimen/fontsize_30"
            ></TextView> 
        </LinearLayout>     
      </LinearLayout> 
	        </LinearLayout> 
   </LinearLayout>

 <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"     
        android:layout_marginBottom="@dimen/edge_20"
        android:background="@drawable/shape_item_share"
         >
        <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/edge_20"    
               android:layout_marginTop="@dimen/edge_10"
               android:textColor="@color/black"
               android:textSize="@dimen/fontsize_30" 
               android:layout_gravity="center_vertical"
               android:textStyle="bold"
               android:text="@string/myfriend_str"
            ></TextView>
        <View android:layout_width="fill_parent" android:layout_height="1dip"
              android:layout_marginLeft="@dimen/edge_20"
	          android:layout_marginRight="@dimen/edge_20"
			  android:background="@color/list_divider" />
	    <ListView
	        android:id="@+id/friend_List"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="@dimen/edge_20"
	        android:layout_marginRight="@dimen/edge_20"
            android:divider="@color/list_divider"
	        android:dividerHeight="0.8dip"
	        android:scrollbars="none"
	        android:footerDividersEnabled="true"
	        android:listSelector="@color/transparent"
	        android:background="@color/transparent"
	        android:visibility="gone"
	         >
	      </ListView>
	
	   <TextView
	        android:id="@+id/frined_noList"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/no_addfd_str"
            android:textColor="@color/gray"  
            android:layout_weight="1"          
            android:textSize="@dimen/fontsize_40" 
            >
        </TextView>
  </LinearLayout>   
     
</LinearLayout>
