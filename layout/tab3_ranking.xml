<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edge_10"
        android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"
        android:layout_marginTop="@dimen/edge_20"
        android:background="@drawable/shape_item_share"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab3_myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/edge_20"
                android:text="@string/noname_str"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_30"
                android:textStyle="bold" >
            </TextView>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/edge_40" >

                <ImageView
                    android:id="@+id/tab3_msgimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_button"
                    android:src="@drawable/msg"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tab3_msgtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="@dimen/edge_36"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/fontsize_30" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/tab3_addfimg"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_button"
                android:src="@drawable/add_normal" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/edge_20"
            android:layout_marginRight="@dimen/edge_20"
            android:background="@color/list_divider" />

        <LinearLayout
            android:id="@+id/tab3_mylayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edge_20"
            android:layout_marginRight="@dimen/edge_20"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tab3_myhead"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/edge_3"
                android:layout_marginTop="@dimen/edge_3"
                android:src="@drawable/headdefault" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </TextView>

            <TextView
                android:id="@+id/tab3_mydist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|right"
                android:text="@string/alldistance"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_36" >
            </TextView>

            <TextView
                android:id="@+id/tab3_myrank"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/edge_40"
                android:gravity="center_vertical|right"
                android:text="@string/no_rankn_str"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_36" >
            </TextView>
            <!--
	          <ImageView
	               android:layout_width="30dp"
	               android:layout_height="wrap_content"
	               android:layout_gravity="center_vertical"
	               android:src="@drawable/item_arrow" />
            -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/edge_20"
        android:layout_marginLeft="@dimen/edge_20"
        android:layout_marginRight="@dimen/edge_20"
        android:layout_weight="1"
        android:background="@drawable/shape_item_share"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/edge_10"
                android:paddingLeft="@dimen/edge_20"
                android:text="@string/tmonth_rank_str"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_30"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/ranking_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/edge_20"
                android:layout_marginTop="@dimen/edge_10"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/fontsize_28" />
        </LinearLayout>
        <!--
             <View android:layout_width="fill_parent" android:layout_height="1dip"
              android:layout_marginLeft="@dimen/edge_20"
	          android:layout_marginRight="@dimen/edge_20"
			  android:background="@color/list_divider" />
 
     <ListView
            android:id="@+id/tab3_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  
            android:layout_marginLeft="@dimen/edge_20"
	        android:layout_marginRight="@dimen/edge_20"
            android:divider="@color/list_divider"
	        android:dividerHeight="0.8dip"
	        android:scrollbars="none"
	        android:footerDividersEnabled="true"
	        android:listSelector="@color/transparent"
	        android:background="@color/transparent"
             >
        </ListView> 
        -->

        <com.desay.sport.friend.CustomListView
            android:id="@+id/tab3_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edge_20"
            android:layout_marginRight="@dimen/edge_20"
            android:background="@color/transparent"
            android:divider="@color/list_divider"
            android:dividerHeight="0.8dip"
            android:footerDividersEnabled="true"
            android:listSelector="@color/transparent"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>