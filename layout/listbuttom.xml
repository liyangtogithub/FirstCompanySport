<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   <View android:layout_width="fill_parent" android:layout_height="1dip"
       android:id="@+id/tab3_view"
	   android:background="@color/list_divider" 
	   android:visibility="gone"
	  />
      <LinearLayout
        android:id="@+id/tab3_updata"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"   >
       <TextView
            android:id="@+id/tab3_uptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/add_more_str"
            android:textColor="@color/gray"            
            android:textSize="@dimen/fontsize_40" 
            >
          </TextView>
       <ProgressBar
           android:id="@+id/tab3_progressBar"
           android:layout_width="27dp"
           android:layout_height="27dp" 
           android:layout_marginLeft="@dimen/edge_20"
           android:visibility="gone"
           android:layout_gravity="center_vertical"/>
      </LinearLayout>
       <TextView
	        android:id="@+id/tab3_no_List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_addfd_str"
            android:layout_marginTop="@dimen/edge_40"
            android:layout_marginBottom="@dimen/edge_20"
            android:textColor="@color/gray"            
            android:textSize="@dimen/fontsize_40" 
            android:visibility="gone"
            >
          </TextView>
       <Button
           android:id="@+id/tab3_button"
           android:layout_width="60dp"
           android:layout_height="40dp"
           android:layout_marginTop="@dimen/edge_20"
           android:layout_marginBottom="@dimen/edge_20"
           android:layout_gravity="center"
           android:background="@drawable/shape_buttomitem"
           android:textColor="@color/white"
           android:visibility="gone"
           android:text="@string/add_str" /> 
             

</LinearLayout>