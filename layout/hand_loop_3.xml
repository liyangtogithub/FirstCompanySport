<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#e4e4e4"
    android:orientation="vertical" >

        <include
        android:id="@+id/record_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edge_90"
        layout="@layout/rl_title" />
        
     <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:layout_below="@+id/record_title">   
    
    <ImageView
        android:id="@+id/iv_loop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/charge1" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edge_30"
        android:layout_marginRight="@dimen/edge_30"
        android:layout_marginTop="@dimen/edge_480"
        android:text="@string/loop_power"
        android:textColor="#343333"
        android:textSize="@dimen/fontsize_38"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1" 
        android:layout_marginLeft="@dimen/edge_30"
        android:layout_marginRight="@dimen/edge_30"
        android:layout_marginTop="@dimen/edge_6"
        android:text="@string/loop_power_content1"
        android:textColor="#343333"
        android:textSize="@dimen/fontsize_38"
         />
      <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_2" 
        android:layout_marginLeft="@dimen/edge_30"
        android:layout_marginRight="@dimen/edge_30"
        android:layout_marginTop="@dimen/edge_3"
        android:text="@string/loop_power_content2"
        android:textColor="#343333"
        android:textSize="@dimen/fontsize_38"
         />

      </RelativeLayout>
</RelativeLayout>